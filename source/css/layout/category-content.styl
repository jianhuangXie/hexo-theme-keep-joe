$category-name-font-size = 1.2rem

.category-container {

  keep-container(false, 0, 0, 1rem, 2rem)

  .category-name {
    margin-bottom 10px
    padding-bottom 20px
    color var(--text-color-2)

    font-weight 600
    font-size $category-name-font-size
    border-bottom 1px solid var(--border-color)

    i {
      color var(--text-color-2)
    }

    +keep-tablet() {
      font-size $category-name-font-size * 0.9
    }

    +keep-mobile() {
      font-size $category-name-font-size * 0.8
    }
  }
    .ellipsis{
    color: var(--primary-color);
  }

  .category-content-container {
    background: var(--background-color-1);
  }
.category-content-container .category-article-list .category-article-item {
    /**position: relative;
    box-sizing: border-box;
    padding: 25px;
    background: var(--content-background-color);
    border-radius: 0.4rem;
    margin-bottom: 15px;
    box-shadow: 2px 2px 5px var(--shadow-color);
    transition-delay: 0s, 0s, 0s, 0s, 0s;
    transition-timing-function: ease, ease, ease, ease, linear;
    transition-duration: 0.2s, 0.2s, 0.2s, 0.2s, 0.2s;
    transition-property: color, background, box-shadow, border-color, transform;**/

    position: relative;
    box-sizing: border-box;
    padding: 10px;
    background: var(--content-background-color);
    margin-bottom: 15px;
    transition-delay: 0s, 0s, 0s, 0s, 0s;
    transition-timing-function: ease, ease, ease, ease, linear;
    transition-duration: 0.2s, 0.2s, 0.2s, 0.2s, 0.2s;
    transition-property: color, background, box-shadow, border-color, transform;
    border-bottom: 1px solid var(--shadow-color);
  }
  @media (max-width: 800px) {
    .category-content-container .category-article-list .category-article-item {
      margin-bottom: 12px;
    }
  }
  @media (max-width: 500px) {
    .category-content-container .category-article-list .category-article-item {
      margin-bottom: 9px;
    }
  }
  .category-content-container .category-article-list .category-article-item:hover {
    /**box-shadow: 2px 2px 8px var(--shadow-hover-color);**/
    .category-article-title a{
      color: var(--primary-color);
    }
  }
  @media (max-width: 800px) {
    .category-content-container .category-article-list .category-article-item {
      padding: 20px;
      border-radius: 0.32rem;
    }
  }
  @media (max-width: 500px) {
    .category-content-container .category-article-list .category-article-item {
      padding: 15px;
      border-radius: 0.24rem;
    }
  }
  .category-content-container .category-article-list .category-article-item .top-icon {
    position: absolute;
    top: 10px;
    right: 12px;
    color: var(--text-color-4);
    font-size: 1.2rem;
    transform: rotate(45deg);
  }
  @media (max-width: 800px) {
    .category-content-container .category-article-list .category-article-item .top-icon {
      font-size: 1.16rem;
    }
  }
  .category-content-container .category-article-list .category-article-item .category-article-title {
    position: relative;
    margin: 0;
    color: var(--text-color-2);
    font-weight: 600;
  /**font-size 1.4rem**/
    font-size: 1.2rem;
    line-height: 1.5;
  }
  @media (max-width: 800px) {
    .category-content-container .category-article-list .category-article-item .category-article-title {
      font-size: 1.3rem;
    }
  }
  @media (max-width: 500px) {
    .category-content-container .category-article-list .category-article-item .category-article-title {
      font-size: 1.2rem;
    }
  }
  .category-content-container .category-article-list .category-article-item .category-article-content {
  /**margin 20px 0**/
    margin: 15px 0;
    color: var(--text-color-3);
    text-align: justify;
    word-wrap: break-word;
  }

  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--text-color-4);
    font-size: 0.92rem;
  }
  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container .home-article-meta-info {
    letter-spacing: 0.5px;
  }
  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container .home-article-meta-info span {
    margin-right: 10px;
  }
  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container .home-article-meta-info span:last-child {
    margin-right: 0;
  }
  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container .home-article-meta-info span ul,
  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container .home-article-meta-info span li {
    display: inline;
  }
  @media (max-width: 500px) {
    .category-content-container .category-article-list .category-article-item .home-article-meta-info-container .home-article-meta-info .category-article-category {
      display: none;
    }
  }
  @media (max-width: 800px) {
    .category-content-container .category-article-list .category-article-item .home-article-meta-info-container .home-article-meta-info .category-article-tag {
      display: none;
    }
  }
  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container .read-more {
    display: flex;
    align-items: center;
  }
  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container hr {
    flex: 1;
    height: 1px;
    margin: 0 10px;
    background: var(--border-color);
    border: none;
  }
  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container a {
    color: var(--text-color-4);
  }
  .category-content-container .category-article-list .category-article-item .home-article-meta-info-container a:hover {
    color: var(--primary-color);
  }
}
