<script>
    window.onload = function () {
        initSwiper();
        function initSwiper(){
                var mySwiper = new Swiper('.swiper-container', {
                speed:300,
                autoplay:{delay: 2000},//可选选项，自动滑动]
                direction: 'horizontal',//滑动方向
                // autoplayDisableOnInteraction : true,
                grabCursor : true,//手掌
                loop: true,//是否连续循环

                // 如果需要分页器
                pagination: {
                    el: '.swiper-pagination',
                },

                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
            })
        }
        window.addEventListener('pjax:success', initSwiper);//pjax 加载html 需要重新渲染 js
    }
    
</script>